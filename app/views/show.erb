<h1><%= @robot.name %></h1>
<a href="/robots/<%= @robot.id %>/edit">Recreate Your Robot</a>
<form action="/robots/<%= @robot.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="Send to JunkYard">
</form>

<img src="<%= @robot.avatar %>" alt="<%= @robot.name %>">

<h2>From:</h2>
<p><%= @robot.city %>, <%= @robot.state %></p>


<h2>Birthday:</h2>
<p><%= @robot.birthdate %>, <%= @robot.birthdate %></p>


<h2>Hired:</h2>
<p><%= @robot.date_hired %></p>

<h2>Department:</h2>
<p><%= @robot.department %></p>
