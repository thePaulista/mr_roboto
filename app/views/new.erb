 <h3>Create Your Dream Robot!</h3>

<form action="/robots" method="post">
  <label for="name">Name:</label><br>
  <input id="name" type="text" name="robot[name]" ><br>

  <label for="city">City:</label><br>
  <input id="city" type="text" name="robot[city]" ><br>

  <label for="state">State:</label><br>
  <input id="state" type="text" name="robot[state]" ><br>

  <label for="avatar">Avatar:</label><br>
  <input id="avatar" type="text" name="robot[avatar]" ><br>

  <label for="birthday">Birthday:</label><br>
  <input id="birthday" type="date" name="robot[birthday]"><br>

  <label for="date-hired">Date Hired:</label><br>
  <input id="date-hired" type="date" name="robot[date_hired]"><br>

  <label for="department">Department:</label><br>
  <input id="department" type="text" name="robot[department]" ><br>

  <input type="submit" class="btn btn-md btn-warning" value="Create Your Dream Robot">
</form>
